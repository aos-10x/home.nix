Match host * exec "gpg-connect-agent UPDATESTARTUPTTY /bye"

Host devserver
  HostName @hostName@
  Port @port@
  ForwardAgent yes
  ForwardX11 yes
  # Forward yubikey
  RemoteForward /run/user/1000/gnupg/S.gpg-agent /run/user/1000/gnupg/S.gpg-agent

Host irc
  User irssi
  RequestTTY force
  RemoteCommand tmux a

Host temple
  HostName temple.lan
  ForwardX11 yes
  ForwardAgent yes
